@page "/contact"  
@* This specifies the URL endpoint for this page. *@

@* Link to the contact-specific CSS *@
<link href="css/contact.css" rel="stylesheet" />

<div class="contact-container">
    <h3>Contact Us</h3>  @* Heading for the contact section *@
    <p>Get in touch for an exclusive quote or more information:</p>  @* Brief description for users *@
    
    <form>
        <label>Name:</label>  @* Label for the name input field *@
        <input type="text" @bind="Name" placeholder="Enter your name" />  @* Text input for the user's name with data binding to the Name property *@

        <label>Email:</label>  @* Label for the email input field *@
        <input type="email" @bind="Email" placeholder="Enter your email" />  @* Email input for the user's email with data binding to the Email property *@

        <label>Message:</label>  @* Label for the message input field *@
        <textarea @bind="Message" placeholder="Enter your message"></textarea>  @* Text area for the user's message with data binding to the Message property *@

        <button type="button" class="btn btn-primary" @onclick="SubmitForm">Submit</button>  @* Button to submit the form, triggers the SubmitForm method when clicked *@
    </form>
    
    <p class="form-feedback">@FormFeedback</p>  @* Displays feedback message to the user after form submission *@
</div>

@code {
    private string Name { get; set; } = string.Empty;  @* Property to store the user's name, initialized to an empty string *@
    private string Email { get; set; } = string.Empty;  @* Property to store the user's email, initialized to an empty string *@
    private string Message { get; set; } = string.Empty;  @* Property to store the user's message, initialized to an empty string *@
    private string FormFeedback = "";  @* Property to store feedback message after form submission, initialized to an empty string *@

    private void SubmitForm()  @* Method to handle form submission logic *@
    {
        // Check if all fields are filled
        if (!string.IsNullOrEmpty(Name) && !string.IsNullOrEmpty(Email) && !string.IsNullOrEmpty(Message))
        {
            // If all fields are filled, create a success message
            FormFeedback = $"Thank you for reaching out, {Name}! We will get back to you shortly.";
        }
        else
        {
            // If any field is empty, prompt the user to fill all fields
            FormFeedback = "Please fill out all fields.";
        }
    }
}
