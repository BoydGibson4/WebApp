@page "/"
<link href="css/main.css" rel="stylesheet" />

<div class="hero">
    <h2>Revolutionize Your Digital Experience</h2>
    <p>Experience the future of web development with a cutting-edge, premium Blazor solution.</p>
    <a class="btn btn-primary" @onclick="@(() => ScrollToSection("services"))">Learn More</a>
</div>

<section class="features" id="services">
    <h3>Our Services</h3>
    <div class="feature-cards">
        <a href="/notes" class="feature-card">
            <h4>Notes</h4>
            <p>Effortlessly create and save your thoughts for easy access anytime.</p>
        </a>
        <a href="/datetime" class="feature-card">
            <h4>Current Time</h4>
            <p>Stay on track with the current time at a glance, wherever you are.</p>
        </a>
        <a href="/quote" class="feature-card">
            <h4>Inspirational Quotes</h4>
            <p>Get your daily dose of motivation with random inspirational quotes.</p>
        </a>
        <a href="/counter" class="feature-card">
            <h4>Counter</h4>
            <p>Simple and fun click counter to track whatever needs counting.</p>
        </a>
    </div>
</section>


<section class="testimonials">
    <h3>What Our Clients Say</h3>
    <blockquote>
        <p>"The team at Tanar Solutions exceeded our expectations! Our website has never looked better."</p>
        <footer>- Happy Client</footer>
    </blockquote>
    <blockquote>
        <p>"Fantastic service! Our business has grown significantly since the redesign."</p>
        <footer>- Satisfied Customer</footer>
    </blockquote>
</section>

<section class="cta">
    <h3>Ready to Get Started?</h3>
    <p>Contact us today for a free consultation and see how we can help your business thrive.</p>
    <a href="/contact" class="btn btn-primary">Get in Touch</a>
</section>

@code {
    [Inject] private IJSRuntime JS { get; set; }

    private async Task ScrollToSection(string sectionId)
    {
        await JS.InvokeVoidAsync("smoothScrollToElement", sectionId);
    }
}
